<section class="card-container">
  <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
    <div class="flipper">
      <div class="front">

        <div class="table">
          <div class="td">
            <%= card_entry_item.entry_key %>
          </div>
        </div>

      </div>
      <div class="back">
        <div class="table">
          <div class="td">
            <%= card_entry_item.entry_value %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4 col-centered">
      <%= will_paginate @user_card_entries, :page_links => false, renderer: BootstrapPagination::Rails%>
    </div>
  </div>

</section>

<%= javascript_tag do %>
    $(document).ready(function(){
    $('.flip').click(function(){
    $(this).find('.card').addClass('flipped').mouseleave(function(){
    $(this).removeClass('flipped');
    });
    return false;
    });
    });
<% end %>



