<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">
    <section>
		<h1>
			<%= @user.name %>
		</h1>
	</section>
  </aside>

  <div class="span8">
    <% if @user.user_cards.any? %>
      <h4>Learning sets (<%= @user.user_cards.count %>)</h4>
      <ol class="usercards">
        <%= render @user_cards %>
      </ol>
      <%= will_paginate @user_cards %>
    <% end %>
  </div>

</div>