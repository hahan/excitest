<% provide(:title, 'Sign in - Excitest') %>

<div class="l-box-center pure-u-1 pure-u-md-1-5">
  <%= form_for( :session, url:sessions_path, html: {class: "pure-form pure-form-stacked"} ) do |f| %>
      <h4>Sign in</h4>

      <fieldset>

        <%= f.text_field :email, placeholder: "Email" %>

        <%= f.password_field :password, placeholder: "Password" %>

        <%= f.submit "Sign in", class: "pure-button pure-button-primary" %>
      </fieldset>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>

  <% end %>

</div>
