<% provide(:title, 'Log in - Excitest') %>

<div class="col-xs-6 col-md-4 col-centered">
  <% flash.each do |key, value| %>
      <div id="error_explanation">
        <div class="alert alert-<%= key %>"><%= value %></div>
      </div>
  <% end %>

  <%= form_for(:session, url: sessions_path, html: {class: "form-horizontal", role: "form"}) do |f| %>
      <h4>Log in</h4>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      </div>

      <p><%= link_to "Forgot your password?", new_password_reset_path %></p>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>

  <% end %>

</div>
