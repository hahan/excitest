<header>
  <div class="navbar navbar-static-top navbar-inverse" role="navigation">
    <div class="container-fluid">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if signed_in? %>
            <%= link_to "Excitest", current_user, class: "navbar-brand" %>
        <% else %>
            <%= link_to "Excitest", root_path, class: "navbar-brand" %>
        <% end %>
      </div>


      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <%= form_for(:search, id: "search_form", url: search_cards_path, html: {class: "navbar-form navbar-left", role: "search"}, method: "get") do |f| %>
              <div class="form-group">
                <%= f.text_field :search_term, placeholder: "Search Excitest", class: "form-control" %>
              </div>
          <% end %>

        <ul class="nav navbar-nav">
          <% if signed_in? %>
              <li><%= link_to "Create lists", newcard_path %></li>
          <% end %>
        </ul>


        <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
                <li><%= link_to "Home", current_user %></li>
                <% if current_user.admin? %>
                    <li><%= link_to "Users", users_path %></li>
                <% end %>

                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Profile", current_user %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "Sign out", signout_path, method: "delete" %>
                    </li>
                  </ul>
                </li>
            <% else %>
                <p class="navbar-text pull-right">
                <li><%= link_to "Home", root_path, class: "pull-right" %></li>
                <li><%= link_to "Log in", signin_path, class: "pull-right" %></li>
                </p>
            <% end %>
          </ul>

      </div>


    </div>
  </div>

</header>