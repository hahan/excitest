<header class="row">
  <div class="navbar navbar-static-top navbar-inverse">
    <div class="navbar-inner">

      <div class="span1">
        <% if signed_in? %>
            <%= link_to "Excitest", current_user, class: "brand pull-left" %>
        <% else %>
            <%= link_to "Excitest", root_path, class: "brand pull-left" %>
        <% end %>
      </div>

      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <div class="span7">
          <%= form_for(:search, id: "search_form", url: search_cards_path, html: {class: "navbar-search pull-right "}, method: "get") do |f| %>
              <%= f.text_field :search_term, placeholder: "Search Excitest", class: "search-query span2" %>
          <% end %>
        </div>

        <div class="nav-collapse collapse span4">
          <ul class="nav pull-right">
            <% if signed_in? %>
                <li><%= link_to "Home", current_user %></li>
                <li><%= link_to "Create lists", newcard_path %></li>

                <% if current_user.admin? %>
                    <li><%= link_to "Users", users_path %></li>
                <% end %>

                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Profile", current_user %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "Sign out", signout_path, method: "delete" %>
                    </li>
                  </ul>
                </li>
            <% else %>
                <p class="navbar-text">
                <li><%= link_to "Home", root_path, class: "pull-right" %></li>
                <li><%= link_to "Sign in", signin_path, class: "pull-right" %></li>
                </p>
            <% end %>
          </ul>


        </div>

      </div>
    </div>
  </div>

</header>