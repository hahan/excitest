<header class="home-menu navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-header">
    <div class="container">
      <% if signed_in? %>
        <%= link_to "Excitest", current_user, id: "logo" %>
      <%else%>
          <%= link_to "Excitest", root_path, id: "logo" %>
      <%end%>
      <nav>
        <ul class="nav navbar-nav pull-right">
          <li>
            <%= form_for( :search, id:"search_form", url:search_cards_path,  html: {class: "pure-form pure-form-stacked"}, method: "get" ) do |f| %>
                  <%= f.text_field :search_term, placeholder: "Search Excitest" %>
            <% end %>
          </li>
          <% if signed_in? %>
              <li><%= link_to "Home", current_user %></li>
              <li><%= link_to "Create sets", newcard_path %></li>
              <li><%= link_to "Users", users_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "Sign in", signin_path %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>